.devise-view{
  margin-bottom: -10px;
  right: 0;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  z-index: -999;
  a:link {color: #fff};
  a:visited {color: #fff}	;
  a:hover {text-decoration:underline; color: #fff}	;
  a:active {text-decoration:underline; color: #fff} ;
  .btn-devise,
  .btn-devise:focus,
  .btn-devise.focus ,
  .btn-devise:hover ,
  .btn-devise:active,
  .btn-devise.active,
  .open > .dropdown-toggle.btn-devise ,
  .btn-devise:active:hover,
  .btn-devise.active:hover,
  .open > .dropdown-toggle.btn-devise:hover,
  .btn-devise:active:focus,
  .btn-devise.active:focus,
  .open > .dropdown-toggle.btn-devise:focus,
  .btn-devise:active.focus,
  .btn-devise.active.focus,
  .open > .dropdown-toggle.btn-devise.focus ,
  .btn-devise:active,
  .btn-devise.active,
  .open > .dropdown-toggle.btn-devise , {
    background-color: #43cb83;
    border-color: #43cb83;
    color: #fff;
  }

  .btn-devise.disabled:hover,
  .btn-devise[disabled]:hover,
  fieldset[disabled] .btn-devise:hover,
  .btn-devise.disabled:focus,
  .btn-devise[disabled]:focus,
  fieldset[disabled] .btn-devise:focus,
  .btn-devise.disabled.focus,
  .btn-devise[disabled].focus,
  fieldset[disabled] .btn-devise.focus {
    background-color: #43cb83;
    border-color: #43cb83;
  }
  .btn-devise .badge {
    color: #43cb83;
    background-color: #fff;
  }

