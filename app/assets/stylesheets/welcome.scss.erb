// 以下为nfreeness定义的样式
.lp-feature{
  background: #FFF;
}

.lp-feature-head h3{
  color: #393939;
  font-size: 2em;
  text-align: center;
  margin: 60px 0 32px;
}

.lp-feature-head p{
  color: #393939;
  font-size: 1em;
  text-align: center;
  margin: 32px 25%;
  width: 50%;
}

.lp-feature-detail{
  width:100%;
  margin:10px;
  line-height: 20px;

  padding:0 10px;
}

.lp-feature-detail img{
  position: relative;
  padding: 10px;
  margin: 0 15%;
}

.lp-feature-detail h4{
  text-align: center;
  font-size: 1em;
  margin: 25px 0 20px;
}

.lp-feature-detail p{
  font-size: 12px;
  margin: 20px 0 50px;
}

.lp-user{
  height: 300px;
  margin:100px 0 0;
}

.lp-user img{
  width: 100px;
  margin: 25px 0 0 30px;
}

.lp-user.title{
  font-weight: bold;
}

.lp-user-desciption {
  margin: 25px 0 0;
}

.lp-action{
  margin-bottom: -10px;
  background: rgba(0, 0, 0, 0.35);
    text-align: center;
    // background: url(images/lp-bg.jpg) no-repeat center;
}

.lp-action p{
    color: #ffffff;
    font-size: 3em;
    margin: 0px 0 10px;
    padding: 60px 0 20px;
  }

.lp-action.btn{
    background: #43CB83;
    color: #FFF;
    font-size: 1.5em;
    text-align: center;
    // margin: 0 auto;
    padding: 8px 20px ;
    margin: 0 40% 60px;
    // width: 20%;
    a:link {color: #FFF};
    a:visited {color: #FFF}	;
    a:hover {color: #e9e9e9}	;
    a:active {color: #e9e9e9};
  }

.lp-action.btn.sm{
    font-size: 1em;
    text-align: center;
    padding: 5px;
    margin: 3px;
    width: 95px;
    height: 35px;
    letter-spacing: 0.2em;
    a:link {color: #FFFFFF};
    a:visited {color: #FFFFFF}	;
    a:hover {color: #FBFBFB}	;
    a:active {color: #FBFBFB};
}
// nfreeness定义样式结束

